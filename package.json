{
	"name": "entertainment-mcp",
	"version": "0.0.1",
	"description": "This MCP fetches information about Movies/TvShows from TMDB and OMDB",
	"main": "dist/index.js",
	"type": "module",
	"private": true,
	"bin": {
		"tmbd-mcp": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && shx chmod +x dist/index.js",
		"watch": "tsc --watch",
		"start": "node dist/index.js",
		"publish-packages": "pnpm run build && changeset publish"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"dedent": "^1.7.0",
		"fastmcp": "^3.16.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.3.1",
		"shx": "^0.4.0",
		"typescript": "^5.9.2"
	}
}
