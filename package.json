{
	"name": "entertainment-mcp",
	"version": "0.0.1",
	"description": "This MCP fetches information about Movies/TvShows from TMDB and OMDB",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"tmbd-mcp": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && shx chmod +x dist/index.js",
		"watch": "tsc --watch",
		"start": "node dist/index.js",
		"publish-packages": "pnpm run build && changeset publish",
		"format": "biome format . --write",
		"lint": "biome check ."
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@biomejs/biome": "^2.1.1",
		"@changesets/cli": "^2.29.4",
		"husky": "^9.0.0",
		"lint-staged": "^15.0.0",
		"dedent": "^1.7.0",
		"fastmcp": "^3.20.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.8.1",
		"shx": "^0.4.0",
		"typescript": "^5.9.3"
	}
}
